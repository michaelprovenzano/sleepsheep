extends base

block content

  .content
    .container
      form#new-trackable-form.form.trackable-form(action='')
        h4 What would you like to track?
        input#trackable__name(type='text' name='trackable__name' placeholder='Caffeine, exercise, etc' required='')
        h4 What timeframe?
        .button-toggle
          .button-toggle__option
            input#trackable-timeframe__before-bed(type='radio' name='trackable-timeframe' value='Before Bed')
            label(for='trackable-timeframe__before-bed') Before Bed
          .button-toggle__option
            input#trackable-timeframe__anytime-today(type='radio' name='trackable-timeframe' checked='' value='Anytime Today')
            label(for='trackable-timeframe__anytime-today') Anytime Today
        input#trackable__hours.hide(type='text' name='trackable__hours' placeholder='How many hours before bed?')
        h4 Do you want to track more specifics?
        .btn-tags__container
          .btn-tag
            input#btn-tag__how-many(type='radio' name='trackable-quantifier' value='How many')
            label(for='btn-tag__how-many')
              .icon.plus-icon
                .plus-icon__horz
                .plus-icon__vert
              .btn-tag__label-text How many?
          .btn-tag
            input#btn-tag__how-long(type='radio' name='trackable-quantifier' value='How long')
            label(for='btn-tag__how-long')
              .icon.plus-icon
                .plus-icon__horz
                .plus-icon__vert
              .btn-tag__label-text How long?
          .btn-tag
            input#btn-tag__how-much(type='radio' name='trackable-quantifier' value='How much')
            label(for='btn-tag__how-much')
              .icon.plus-icon
                .plus-icon__horz
                .plus-icon__vert
              .btn-tag__label-text How much?
        input#trackable__quantifierUnits.hide(type='text' name='trackable-quantifierUnits' placeholder='e.g. drinks, minutes, oz, etc...')
        h4 Write a short description if you would like.
        textarea(id='trackable__description' name='trackable-description' cols='30' rows='10' placeholder='Write some notes about how you slept and how you felt when waking up.')
        button.btn.btn-primary(type='submit') Track It!
